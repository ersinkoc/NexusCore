{
  "name": "nexuscore",
  "version": "1.0.0",
  "private": true,
  "description": "The Ultimate Node.js & React Boilerplate - Production-ready, modular, event-driven full-stack monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/NexusCore.git"
  },
  "author": "NexusCore Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @nexuscore/db generate",
    "db:push": "pnpm --filter @nexuscore/db push",
    "db:migrate": "pnpm --filter @nexuscore/db migrate",
    "db:studio": "pnpm --filter @nexuscore/db studio",
    "db:seed": "pnpm --filter @nexuscore/db seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "api": "pnpm --filter @nexuscore/api dev",
    "web": "pnpm --filter @nexuscore/web dev",
    "cli": "pnpm --filter @nexuscore/cli dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "prisma": "^5.9.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.9.3"
    }
  }
}
