{
  "name": "@nexuscore/types",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types and Zod schemas",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nexuscore/config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "typescript": "^5.3.3"
  }
}
